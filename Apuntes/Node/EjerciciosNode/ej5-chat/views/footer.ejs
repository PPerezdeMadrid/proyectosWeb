 
<% if (typeof(CookiesAceptadas) == 'undefined' || CookiesAceptadas !== true){ %> 
 <div id="cookie-banner">
   <h2> Uso de Cookies</h2>
   <p> Le avisamos el uso de las cookies es obligatorio, si no desea aceptarlas jodete</p>
   <div class="botones">
      <button onclick="aceptarCookies()"> Aceptar </button>
      <a href="https://www.google.com">
         <button>Cancelar</button>
         </a> 
   </div>
   <script>
      const banner = document.getElementById("cookie-banner");

      function aceptarCookies(){
         fetch('/acepta-cookies')
            .then(response => response.json())
            .then(data =>{
               if(data){
                  console.log("El usuario ha aceptado las cookies")
                  banner.style.display = "none";
               }else{
                  console.error("Ha habido un problema registrando las cookies del usuario")
               }
            })
      }
   </script>
 </div>
<% } %> 
